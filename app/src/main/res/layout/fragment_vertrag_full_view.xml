<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/dataFullViewFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.erichambuch.biproclient.ui.vertrag.DataFullViewFragment" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/floating_action_button_vertrag_expand_all"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    android:layout_margin="16dp"
    android:contentDescription="Expand All"
    app:srcCompat="@drawable/ic_expand_black_24dp"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>